{
  "name": "html-text-scout",
  "version": "1.0.0",
  "description": "A visual web page text scrapper",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --watch --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aidandownes/scout.git"
  },
  "keywords": [
    "web scrapper",
    "text scrapper"
  ],
  "author": "aidandownes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aidandownes/scout/issues"
  },
  "homepage": "https://github.com/aidandownes/scout#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/puppeteer": "^5.4.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.5"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "puppeteer": "^7.1.0"
  }
}